[module/updates]
type = custom/script
exec = checkupdates | wc -l
exec-if = ping -c 1 google.com > /dev/null && [[ $(checkupdates | wc -l) -gt 0 ]]
interval = 600
label  = %{F#666}ÔïÖ%{F-} %output%

[module/downspeed]
type = custom/script
exec = speed-test -j | jq -r '.download | floor' | grep -v error
exec-if = ping -c 1 google.com > /dev/null
interval = 700
label  = %{F#666}ÔÅ£%{F-} %output% M

[module/upspeed]
type = custom/script
exec = speed-test -j | jq -r '.upload | floor' | grep -v error
exec-if = ping -c 1 google.com > /dev/null
interval = 110
label  = %{F#666}ÔÅ¢%{F-} %output% M

[module/covid19]
type = custom/script
exec = echo "scale = 2; $(curl -s "https://corona.lmao.ninja/all" | jq '.cases') / 1000000" | bc
exec-if = ping -c 1 google.com > /dev/null
interval = 300
label  = %{F#666}C19%{F-} %output%M

[module/vpn]
type = custom/script
exec = geo -g | sed -n 3p | cut -c 1-3
exec-if = [ "$(geo -g | sed -n 1p)" != "Germany" ]
interval = 15
label = %{F#666}ÓÄá%{F-} %output%

[module/novpn]
type = custom/script
exec = geo -g | sed -n 3p
exec-if = [ "$(geo -g | sed -n 1p)" == "Germany" ]
interval = 15
label = %{F#666}ÔÄ§%{F-} %output%

[module/fanspeed]
type = custom/script
exec = cat /proc/acpi/ibm/fan | grep speed: | awk '{print $2}'
exec-if = [[ -f /proc/acpi/ibm/fan ]]
interval = 15
label = %{F#666}FAN%{F-} %output%

[module/uptime]
type = custom/script
exec = uptime | awk '{print $3}'
exec-if = [[ "$(uptime)" == *"days"* ]]
interval = 60
label = %{F#666}UP%{F-} %output%
format-suffix = "d"

[module/cputemp]
type = custom/script
exec-if = sensors
exec =  sensors | grep "Package id 0" | awk '{print $4}' | sed -e "s/+//" | sed 's/\..*$//'
format-prefix = "%{F#666}CPU%{F-} "
format-suffix = "¬∞C"

[module/thinkpadtemp]
type = custom/script
exec-if = sensors
exec =  sensors | grep temp1 | awk '{print $2}' | sed -e "s/+//" | sed 's/\..*$//'
format-prefix = "%{F#666}CPU%{F-} "
format-suffix = "¬∞C"

[module/cpufreq]
type = custom/script
exec-if = lscpu
exec =  lscpu | grep CPU\ MHz | awk '{print $3}' | jq 'floor' | jq './1000' | xargs printf "%.*f\n" 1
format-prefix = "%{F#666}GHz%{F-} "

[module/gputemp]
type = custom/script
exec-if = sensors
exec = nvidia-settings -q all | grep GPUCore | grep Attribute | head -n 1 | awk '{print $4}' | sed 's/\.//'
format-prefix = "%{T4}Ôãá%{T-} "
format-suffix = "¬∞C GPU"

